#include <stdio.h>
#include <string.h>
#define MAX_LEN 1000

int main()
{
    int n;
    scanf("%d", &n);

    char output[n][MAX_LEN];

    for (int i = 0; i < n; i++)
    {
        char word[MAX_LEN];

        scanf("%s", word);

        int len;
        len = strlen(word);

        if (len > 10)
        {
           sprintf(output[i], "%c%d%c", word[0], len-2, word[len-1]);
        }
        else
        {
            strcpy(output[i], word);
        }
    }
    for(int i=0; i<n; i++){
        printf("%s\n", output[i]);
    }

    return 0;
}
