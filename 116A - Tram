#include<stdio.h>
#include<math.h>
int main(){
   int n;
   scanf("%d", &n);
   int tram[n][2];
   for(int i=0; i<n; i++){
    for(int j=0; j<2; j++){
        scanf("%d", &tram[i][j]);
    }
   }
   int cap[n];
   int sum=0;
   int max=0;
   for(int i=0; i<n; i++){
    sum=sum+tram[i][1]-tram[i][0];
        if(sum>max)max=sum;
    }
   
    printf("%d", max);
    return 0;
}
