#include<stdio.h>
int main(){
    int n;
    scanf("%d",&n);
    while(n--){
        int t;
        scanf("%d",&t);
        int num[t];
        int min=99999;
        int max=-1;
          int min_pos = -1, max_pos = -1;
        for(int i=0; i<t; i++){
            scanf("%d",&num[i]);
            if(num[i]>max){
                max=num[i];
                 max_pos = i; 
            }
            if(num[i]<min){
                min=num[i];
                 min_pos = i; 
            }
        }
         int moves1 = (max_pos > min_pos ? max_pos : min_pos) + 1;

        int moves2 = t - (max_pos < min_pos ? max_pos : min_pos);

       
        int moves3a = (min_pos + 1) + (t - max_pos); 
        int moves3b = (max_pos + 1) + (t - min_pos); 
        int moves3 = moves3a < moves3b ? moves3a : moves3b;

       
        int ans = moves1;
        if (moves2 < ans) ans = moves2;
        if (moves3 < ans) ans = moves3;

        printf("%d\n", ans);
    }
    return 0;
}
