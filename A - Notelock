#include<stdio.h>
int main(){
    int n;
    scanf("%d",&n);
    while(n--){
        int n,k;
        scanf("%d %d",&n, &k);
        char str[n+1];
        scanf("%s", str);
        int ctr=0;
       
        for(int i=0; i<n; i++){
            if(str[i]=='1'){
                int flag=0;
                for(int j=1; j<=k-1; j++){
                    if(str[i-j]=='1'){
                       flag=1;
                    }
                }
                if(flag==0)ctr++;
            }
        }
        printf("%d\n",ctr);
    }
    return 0;
}
