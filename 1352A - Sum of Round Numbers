#include<stdio.h>
#include<math.h>
int main(){
    int n;
    scanf("%d", &n);
    while(n--){
        int num;
        scanf("%d", &num);
        int ctr=0;
        int out[100]={0};
        int temp=num;
        int ten=1;
        while(temp!=0){
            int a=temp%10;
            int b=a*ten;
            ten=ten*10;
            temp=temp/10;
            if(b!=0){
                out[ctr++]=b;
            }
        }
        printf("%d\n", (ctr));
        for(int j=0; j<ctr; j++){
            printf("%d ",out[j]);
        }
        printf("\n");
    }
    return 0;
}
