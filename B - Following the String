#include<stdio.h>
int main(){
    int T;
    scanf("%d", &T);
    while(T--){
        int n;
        scanf("%d", &n);

        int *a=(int *)malloc((size_t)n*sizeof(int));
        if(!a)return 0;

        for(int i=0; i<n; i++){
            if(scanf("%d", &a[i])!=1){
                free(a); return 0;
            }
        }
        char *s=(char *)malloc((size_t)n+1);
        if(!s){free(a); return 0;}

        int *cnt=(int *)calloc(26, sizeof(int));\
        if(!cnt){free(a); free(s); return 0;}

        for(int i=0; i<n; i++){
            int need=a[i];
            for(int k=0; k<26; k++){
                if(cnt[k]==need){
                    s[i]=(char)('a'+ k);
                    cnt[k]++;
                    break;
                }
            }
        }
        s[n]='\0';
        printf("%s\n", s);
        free(cnt);
        free(s);
        free(a);
    }
    return 0;
}
