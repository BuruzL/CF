#include<stdio.h>
int main(){
    int n;
    scanf("%d", &n);
    int team[n][3];
    for(int i=0; i<n; i++){
        for(int j=0; j<3; j++){
            scanf("%d", &team[i][j]);
        }
    }
    int check=0;
    for(int i=0; i<n; i++){
        int chk=team[i][0]+team[i][1]+team[i][2];
        if(chk>=2){
            check++;
        }
    }
    printf("%d", check);
    return 0;
}
