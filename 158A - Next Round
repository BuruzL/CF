#include<stdio.h>
int main(){
    int n,k;
    scanf("%d%d", &n, &k);
    int num[n];
    for(int i=0; i<n; i++){
        scanf("%d", &num[i]);
    }
    int temp=num[k-1];
    int cnt=0;
    for(int j=0; j<n; j++){
        if(num[j]==0){}
        else if(num[j]>=temp)cnt++;
    }
    printf("%d", cnt);
    return 0;
}
