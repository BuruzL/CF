#include<stdio.h>
#include<limits.h>
int main(){
    int n;
    scanf("%d", &n);
    int out[n];
    for(int i=0; i<n; i++){
        int t;
        scanf("%d", &t);
        int num[t];
        int min=INT_MAX;
        for(int j=0; j<t; j++){
            scanf("%d", &num[j]);
            if(num[j]<min)min=num[j];
        }
        int sum=0;
        for(int j=0; j<t; j++){
            sum=sum+num[j]-min;
        }
        out[i]=sum;
    }
    for(int i=0; i<n; i++)printf("%d\n", out[i]);
    return 0;
}
