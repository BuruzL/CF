#include<stdio.h>
#include<string.h>
int main(){
    int n;
    scanf("%d", &n);
    int chk[n];
    for(int i=0; i<n; i++)chk[i]=0;
    for(int i=0; i<n; i++){
        int t;
        scanf("%d", &t);
        char ab[t];
        scanf("%10000s", ab);
        int ctr=0;
        for(int j=0; j<t-2; j++){
            if(ab[j]==ab[j+2]){
                char temp=ab[j+1];
                ab[j+2]=ab[j+1];
                ab[j+1]=temp;
                j=j+2;
                ctr++;
            }
        }
        chk[i]=ctr;
    }
    for(int i=0; i<n; i++)printf("%d\n", chk[i]);
    return 0;
}
