#include<stdio.h>
#include<string.h>
int main(){
    int n;
    scanf("%d", &n);
    char o[n][101];
    for(int i=0; i<n; i++){
        char a[101];
        scanf("%100s", a);
        int ctr=0;
            int len = strlen(a);
        o[i][ctr++]=a[0];
        for(int j=1;j<len-1; j+=2){
                o[i][ctr++]=a[j];
        }
         o[i][ctr++] = a[len- 1]; 
        o[i][ctr]='\0';

    }
    for(int i=0; i<n; i++){  
            printf("%s\n", o[i]);
    }
    return 0;
}
