#include<stdio.h>
int main(){
    int t;
    scanf("%d",&t);
    while(t--){
       long long n,k,x;
       scanf("%lld %lld %lld", &n,&k,&x);
       long long minsum=(k*(k+1))/2;
       long long maxsum=(k*(2*n+1-k))/2;
       if(x>=minsum && x<=maxsum)printf("YES\n");
       else printf("NO\n");
    }
    return 0;
}
