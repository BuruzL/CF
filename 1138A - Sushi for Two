#include<stdio.h>
int main(){
    int n; 
    scanf("%d", &n);
    int sushi[n];
    for(int i=0; i<n; i++){
        scanf("%d", &sushi[i]);
    }
    int prevlen=0,curlen=0,ans=0;
    for(int i=0; i<n; i++){
        if(sushi[i]==sushi[i+1]){
            curlen++;
        }else{
            if(2*(prevlen<curlen ? prevlen: curlen)>ans)
            ans=2*(prevlen<curlen? prevlen:curlen);
            prevlen=curlen;
            curlen=1;
        }

    }
    int m=prevlen<curlen?prevlen:curlen;
    if(2*m>ans)ans=2*m;

    printf("%d\n", ans);
    return 0;
}
