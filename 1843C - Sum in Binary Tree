 #include<stdio.h>
#include<math.h>
int main(){
    int n;
    scanf("%d", &n);
    while(n--){
        unsigned long long v;
        scanf("%llu", &v);
        unsigned long long sum=0;
        while(v){
            sum+=v;
            v>>=1;
        }
        printf("%llu\n", sum);

    }
    return 0;
}
